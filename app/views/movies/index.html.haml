-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @title_class}
        %a#title_header{title: 'Movie Title', href: movies_path(:header => "title_header")} Movie Title
      %th{:class => @rating_class}
        %a#rating_header{title: 'Rating', href: movies_path(:header => "rating_header")} Rating
      %th{:class => @release_class}
        %a#release_date_header{title: 'Release Date', href: movies_path(:header => "release_date_header")} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
