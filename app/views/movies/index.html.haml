-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @title_class}= link_to 'Movie Title', movies_path(:header => "title_header")
      %th{:class => @rating_class}= link_to 'Rating', movies_path(:header => "rating")
      %th{:class => @release_class}= link_to 'Release Date', movies_path(:header => "release_date_header")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
